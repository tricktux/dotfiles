# Sway config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
#

# Font for window titles
font pango:Cascadia Mono PL 9

########## Mod ############ {{{
# Mod1 = Alt_L
# Mod3 = Alt_R  
# Mod4 = Super/Windows key
set $mod Mod4
#}}}

# Movement keys{{{
set $up k
set $down j
set $left h
set $right l
#}}}

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
include "~/.config/sway/$(cat /etc/hostname).conf"

# Input configuration {{{
input type:keyboard {
    # Enable num lock
    xkb_numlock enabled

    # Keyboard repeat rate (replaces xset r rate 200 40)
    repeat_delay 200
    repeat_rate 40
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

# Cursor
seat seat0 xcursor_theme Bibata-Modern-DarkRed 20

# ------------------------------------------------------------
# Performance Tweaks
# ------------------------------------------------------------
# damage tracking incremental
default_border pixel
default_floating_border pixel
# unfocused_floating_opacity 0.95
# output * render_direct_scanout on
output * adaptive_sync on
output * max_render_time 6
# ------------------------------------------------------------

# You can get the names of your inputs by running: swaymsg -t get_inputs
input type:touchpad {
    tap enabled
    natural_scroll enabled
    dwt enabled
    accel_profile "flat"
    pointer_accel 0.2
}
#}}}

# Output configuration {{{
# Example - adjust for your monitors
# output * bg ~/.config/sway/wallpaper.jpg fill
#}}}

# Bindings{{{
floating_modifier $mod normal

# dunst mappings {{{
bindsym ctrl+semicolon exec dunstctl close
bindsym ctrl+shift+space exec dunstctl close-all
bindsym ctrl+shift+period exec dunstctl context
bindsym ctrl+grave exec dunstctl history-pop
# }}}

# Keep non-scratchpad actions accessible too
bindsym $mod+u exec killall -SIGUSR1 waybar

# Launch scratchpads (replacing tdrop with native sway scratchpad)
bindsym $mod+o exec ~/.config/sway/scripts/scratchpad-hint; mode "scratchpad"
mode "scratchpad" {
    bindsym o exec ~/.config/sway/scripts/sway_scratchpad journal;    mode "default"
    bindsym n exec ~/.config/sway/scripts/sway_scratchpad ranger;     mode "default"
    bindsym semicolon exec ~/.config/sway/scripts/sway_scratchpad terminal; mode "default"
    bindsym p exec ~/.config/sway/scripts/sway_scratchpad ncpamixer;  mode "default"
    bindsym c exec ~/.config/sway/scripts/sway_scratchpad qalculate;  mode "default"
    bindsym i exec ~/.config/sway/scripts/sway_scratchpad tickrs;     mode "default"
    bindsym y exec ~/.config/sway/scripts/sway_scratchpad htop;       mode "default"
    bindsym b exec ~/.config/sway/scripts/sway_scratchpad feishin;    mode "default"
    bindsym w exec ~/.config/sway/scripts/sway_scratchpad whatsapp;    mode "default"
    bindsym e exec ~/.config/sway/scripts/sway_scratchpad evolution;    mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Media controls
bindsym ctrl+mod1+h exec playerctl play-pause
bindsym ctrl+mod1+l exec playerctl next
bindsym ctrl+mod1+k exec pamixer --increase 5
bindsym ctrl+mod1+j exec pamixer --decrease 5
bindsym ctrl+mod1+m exec pamixer --toggle-mute
bindsym ctrl+shift+m exec pamixer --default-source -t

bindsym ctrl+mod1+p exec ~/.config/rofi-pass/rofi-pass

# Hide all scratchpads
bindsym $mod+m scratchpad show

bindsym $mod+x [urgent=latest] focus

# Resize shortcuts
bindsym $mod+Ctrl+$left resize shrink width 3 px
bindsym $mod+Ctrl+$up resize grow height 3 px  
bindsym $mod+Ctrl+$down resize shrink height 3 px
bindsym $mod+Ctrl+$right resize grow width 3 px

# Move workspaces between outputs
bindsym $mod+shift+bracketleft move workspace to output left
bindsym $mod+shift+bracketright move workspace to output right

bindsym $mod+bracketleft move container to output left
bindsym $mod+bracketright move container to output right

bindsym $mod+Mod1+$left focus output left
bindsym $mod+Mod1+$right focus output right

# Screen lock
bindsym $mod+shift+x exec ~/.config/sway/scripts/lock.sh

# Terminal and browser
bindsym $mod+Return exec $TERMINAL
bindsym $mod+shift+Return exec $BROWSER

# Kill window
bindsym $mod+q kill

# Program launcher
bindsym $mod+d exec "rofi -show combi -theme-str 'window {width: 55%;}'"

# Focus controls
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Arrow key alternatives
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split vertical
bindsym $mod+v split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Layout controls
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Floating toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent/child
bindsym $mod+a focus parent

# Scratchpad
bindsym $mod+Shift+minus move scratchpad

############ Workspaces ###################{{{
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Tab workspace back_and_forth

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Config management
bindsym $mod+shift+r reload
bindsym $mod+shift+s exec mkdir -p $XDG_DATA_HOME/screenshots && \
    grim -g "$(slurp)" - | \
    tee $XDG_DATA_HOME/screenshots/$(date +'%Y-%m-%d_%T.png') | \
    wl-copy


# Resize mode
mode "resize" {
    bindsym $left resize shrink width 10 px
    bindsym $down resize grow height 10 px
    bindsym $up resize shrink height 10 px
    bindsym $right resize grow width 10 px

    bindsym Left resize shrink width 10 px
    bindsym Down resize grow height 10 px
    bindsym Up resize shrink height 10 px
    bindsym Right resize grow width 10 px

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Mod1+r mode "default"
}

bindsym $mod+mod1+r mode "resize"

########### Custom Bindings ############################
# Screenshots
bindsym Print exec grim -t png - | wl-copy -t image/png
bindsym shift+Print exec grim -g "$(slurp)" -t png - | wl-copy -t image/png

# Brightness (if you have a laptop)
bindsym XF86MonBrightnessUp exec brillo -A 10
bindsym XF86MonBrightnessDown exec brillo -U 10
bindsym $mod+Up exec brillo -A 10
bindsym $mod+Down exec brillo -U 10

# Volume
bindsym $mod+Right exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym $mod+Left exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Media keys
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86PowerOff exec "swaymsg '[app_id=\".*\"]' kill && systemctl poweroff"
bindsym XF86PowerDown exec "swaymsg '[app_id=\".*\"]' kill && systemctl poweroff"

# }}}

# Window colors{{{
# Load colors from pywal
include "$HOME/.cache/wal/colors-sway"

# class                 border      backgr.     text         indicator    child_border
client.focused          $color6     $color6     $background  $foreground  $color6
client.focused_inactive $color8     $color8     $background  $background  $color8
client.unfocused        $background $background $foreground  $background  $color8
client.urgent           $foreground $color9     $foreground  $background  $color9
client.placeholder      $color7     #0000ff     $foreground  $background  $background

client.background       $background
# }}}



# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%essid)"
        format_down = "W: -"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: "
}

battery all {
        format = "B: %status %percentage %remaining"
        format_down = "B: -"
        status_chr = "âš¡ "
        status_bat = "ðŸ”‹ "
        status_unk = "? UNK"
        status_full = "â˜» "
        status_idle = "â˜» "
}

disk "/" {
        format = "D: %avail"
}

load {
        format = "L: %1min"
}

memory {
        format = "M: %used"
        threshold_degraded = "10%"
        format_degraded = "M: %free"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
